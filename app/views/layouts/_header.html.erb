<header>
  <% if user_signed_in? %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/">ECA</a> <p class="text-light"></p>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to user_path(current_user), class: 'nav-link text-light mr-2' do %>
                <div>
                  <% if current_user.user_image.present? %>
                    <%= image_tag current_user.user_image, size: "20x20", class: "nav-user-icon" %>
                  <% else %>
                    <%= image_tag "no_image",size: "20x20",class: "nav-user-icon" %>
                  <% end %>
                  My-page
                </div>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to 'About', root_path, class: 'nav-link text-light mr-2' %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link text-light mr-2' %>
            </li>

          </ul>
        </div>
      </div>
    </nav>
  <% elsif admin_signed_in? %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <a class="navbar-brand" href="/">ECA</a> <p class="text-light"></p>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to 'About', root_path, class: 'nav-link text-light mr-2' %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'nav-link text-light mr-2' %>
            </li>

          </ul>
        </div>
      </div>
    </nav>

  <% else %>
   <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">ECA</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <%= link_to 'お試し', users_guest_sign_in_path, class: 'nav-link text-light mr-2' %>
          </li>
          <li class="nav-item">
            <li><%= link_to '新規登録', new_user_registration_path, class: 'nav-link text-light mr-2' %></li>
          </li>
          <li class="nav-item">
            <li><%= link_to 'ログイン', new_user_session_path, class: 'nav-link text-light mr-2' %></li>
          </li>

        </ul>
      </div>
    </div>
   </nav>
  <% end %>
</header>