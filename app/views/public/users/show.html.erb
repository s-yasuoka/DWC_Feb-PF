<%#= render "layouts/error", table: @intake %>
<%= render "public/intakes/form", intake: @intake_new %>
<div class="container">
  <div class="row">
    <div class="col-md-12 text-center border my-3">
      <div class="bar-item">
        <%= link_to "ランキング", users_rank_path %>
      </div>
    </div>

    <div class="col-md-2 border my-3">
      <h4>今週</h4>
      グラフ

      <h4>先月</h4>
      グラフ
    </div>

    <div class="col-md-10">
      <div class="calendar border my-3 p-2 py-3">
        <%= month_calendar events: @intakes do |date, intakes| %>
          <%= date.day %><br>

          <% intakes.each do |intake| %>
            <div>
              <% if intake.status == "breakfast" %>
                <div class="intake-breakfast d-flex flex-row">
                  <p>朝:</p>
                  <%= link_to intake.menu_name, edit_intake_path(intake), class: "text-dark" %>
                </div>
              <% elsif intake.status == "lunch" %>
                <div class="intake-lunch d-flex flex-row">
                  <p>昼:</p>
                  <%= link_to intake.menu_name, edit_intake_path(intake), class: "text-dark" %>
                </div>
              <% elsif intake.status == "dinner" %>
                <div class="intake-dinner d-flex flex-row">
                  <p>夜:</p>
                  <%= link_to intake.menu_name, edit_intake_path(intake), class: "text-white" %>
                </div>
              <% elsif intake.status == "snack" %>
                <div class="intake-snack d-flex flex-row">
                  <p>間食:</p>
                  <%= link_to intake.menu_name, edit_intake_path(intake), class: "text-dark" %>
                </div>
              <% end %>

            </div>
          <% end %>
        <% end %>
        <div class="btn btn-primary">食事を記録する(dummy)</div>
        <%#= link_to "食事を記録する", new_intake_path %>
      </div>

      <div class="user-box border my-3 p-2">
        <div class="d-flex flex-row">
          <%= image_tag current_user.get_user_image(30,30), class: "user-icon" %>
          　・<strong><%= current_user.name %></strong>
        </div>

        <div class="status-box d-flex flex-row">
          <% if @user.rank_status >= 0 && @user.rank_status <= 9 %>
            <%= image_tag "1.jpg", size: "50x50" %>
            <p class="text-bottom">あなたのステータスは<strong>"たね"</strong>です。</p>
          <% elsif @user.rank_status > 9 && @user.rank_status <= 21 %>
            <%= image_tag "2.jpg", size: "50x50" %>
            <p>あなたのステータスは<strong>"苗"</strong>です。</p>
          <% elsif @user.rank_status > 21 && @user.rank_status <= 42 %>
            <%= image_tag "3.jpg", size: "50x50" %>
            <p>あなたのステータスは<strong>"謎の葉"</strong>です。</p>
          <% elsif @user.rank_status > 42 && @user.rank_status <= 63 %>
            <%= image_tag "4.jpg", size: "50x50" %>
            <p>あなたのステータスは<strong>"謎の果実"</strong>です。</p>
          <% elsif @user.rank_status > 63 %>
            <%= image_tag "5.jpg", size: "50x50" %>
            <p>あなたのステータスは<strong>"いちご"</strong>です。</p>
          <% end %>

        </div>

        <div class="">

          <% if @user.name != "guestuser" %>
            <%= link_to "編集する", edit_user_path(current_user.id) %>
          <% end %>
        </div>
      </div>


    </div>

    <div class="col-md-12 border my-3">
      <div>〜〜お知らせ〜〜</div>
      <table>
        <tr>
          <th>date</th>
          <th>contents</th>
        </tr>
        <tr>
          <td> </td>
          <td> </td>
        </tr>
      </table>

    </div>
  </div>
</div>