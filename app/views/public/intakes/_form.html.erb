<div class="bg-danger">
  <%= form_with model: intake, local:true do |f| %>
    <table>
      <tr>
        <th><%= f.label "写真"%></th>
        <th><%= f.file_field :image, accept: 'image/*'  %></th>
      </tr>

      <tr>
        <th><%= f.label "メニュー" %></th>
        <th><%= f.text_field :menu_name %></th>
      <tr>

       <tr>
        <th><%= f.label "材料" %></th>
        <th><%= f.text_field :name, value: @ingredient_new %></th>
        <th><%#= f.collection_select :ingredient_id, Ingredient.all, :id, :name %></th>
        <th>
          <%#= select_tag :ingredient_id,
            options_from_collection_for_select(Ingredient.all, :id, :name, params[:ingredient_id]),
              {
                prompt: '具材選択',
                multiple: true
              }%>
        </th>
        <td>
          <% @ingredient_list.each do |list| %>
            <%= list.name %>
          <% end %>
        </td>
      <tr>

      <tr>
        <th><%= f.label "何ご飯?" %></th>
        <th><%= f.select :status, Intake.statuses.keys.map{|k| [I18n.t("enums.intake.status.#{k}"), k]},{class: ""} %></th>
      <tr>

      <tr>
        <th><%= f.label "日付" %></th>
        <th><%= f.date_field :start_time %></th>
      <tr>

      <tr>
        <th><%= f.label "めも" %></th>
        <th><%= f.text_area :memo, row: 3 %></th>
      <tr>

      <tr>
        <td></td>
        <td class="text-right">
          <% if f.object.new_record? %>
            <%= f.submit "記録", class: "btn btn-primary" %>
          <% else %>
            <%= f.submit "更新", class: "btn btn-success" %>
          <% end %>
          </td>
      </tr>

    </table>
  <% end %>


</div>